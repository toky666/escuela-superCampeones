---
import Carousel from "@molecules/Carousel/Carousel.astro";
const { toolsData } = Astro.props;
---

<Carousel clase="slide__track--tools">
  {
    [...toolsData, ...toolsData].map((data) => (
      <div class="slide">
        <div class="tag">{data.name}</div>
        <img src={data.icon} loading="lazy" alt="slider-img" width="100" height="100" />
      </div>
    ))
  }
</Carousel>
