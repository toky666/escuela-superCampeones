<div class="to__top">
  <iconify-icon
    icon="line-md:arrow-small-up"
    width="30"
    height="30"
    style="color: #ffffff"></iconify-icon>
</div>

<script is:inline>
  const cajaToTop = document.querySelector(".to__top");

  cajaToTop.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });

  window.addEventListener("scroll", () => {
    if (window.scrollY > 1400) {
      cajaToTop.classList.add("show");
    } else {
      cajaToTop.classList.remove("show");
    }
  });
</script>

<style lang="scss">
  @use "@sass/variables" as *;
  .to__top.show {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    margin-right: 3.8rem;
    top: 75%;
    right: 0;
    width: 40px;
    height: 40px;
    border: 2px solid $yellow;
    background: rgb(255 226 2 / 25%);
    z-index: 999;
    border-radius: 50%;
    cursor: pointer;
    transition: opacity 0.3s ease-in-out;
    opacity: 1;
  }

  /* Estilos para cuando el botón no está activo */
  .to__top {
    display: none;
    opacity: 0;
  }
</style>
