---
import SocialIcons from "@src/components/atoms/SocialIcons/SocialIcons.astro";
import { userData } from "../../../data/userData.js";
---

<section class="hero">
  <video id="fullscreen-video" autoplay muted loop playsinline>
    <source src="/videos/intro.mp4" type="video/mp4" />
  </video>
  <button id="btnVolumen"><iconify-icon icon="line-md:volume-high-off-twotone" width="24" height="24"></iconify-icon></button>
  <div class="hero__container">
    <div class="hero__content">
      <h1 class="hero__title">{userData.name}</h1>
      <h1 class="hero__title">
        <span class="span__blink">{userData.lastName}</span>
      </h1>
      <div class="text__container">
        <b></b>
        <p class="hero__slogan">
          {userData.sloganHero1}
          <div class="ball-rotation">
            <iconify-icon icon="emojione:soccer-ball" width="30" height="30"
            ></iconify-icon>
          </div>
        </p>
      </div>
    </div>
    <SocialIcons />
  </div>
</section>

<script>
  const video = document.getElementById("fullscreen-video") as HTMLVideoElement;
  const btnVolumen = document.getElementById("btnVolumen") as HTMLButtonElement;

  if (btnVolumen && video) {
    btnVolumen.addEventListener("click", () => {
      if (video.muted) {
        video.muted = false;
        video.volume = 0.5;
        btnVolumen.innerHTML = '<iconify-icon icon="line-md:volume-high-twotone" width="24" height="24"></iconify-icon>';
      } else {
        video.muted = true;
        btnVolumen.innerHTML = '<iconify-icon icon="line-md:volume-high-off-twotone" width="24" height="24"></iconify-icon>';
      }
    });
  }
</script>
