---
import BackgroundIconsFloat from "@src/components/atoms/BackgroundIconsFloat/BackgroundIconsFloat.astro";
import ProfilePicture from "@src/components/atoms/ProfilePicture/ProfilePicture.astro";
import SocialIcons from "@src/components/atoms/SocialIcons/SocialIcons.astro";
import { userData } from "../../../data/userData.js";
import DarkBg from "@src/components/DarkBg.astro";
---

<section class="hero">
  <BackgroundIconsFloat />
         <video class="fullscreen-video" autoplay loop>
      <source src="/videos/intro.mp4" type="video/mp4" />
      Tu navegador no soporta el video.
    </video>
  <div class="hero__container">
    <DarkBg />
    <div class="hero__content">
      <h1 class="hero__title">
        Hi! I'm {userData.name}<span class="span__blink"
          >{userData.lastName}</span>
      </h1>
      <div class="text__container">
       <b></b> <p class="hero__slogan">â‰¥{userData.sloganHero1}</p></b>
      </div>
      <SocialIcons />
    </div>
  </div>
</section>
<style>
  .fullscreen-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    z-index: -1;
  }

  .overlay-content {
    position: relative;
    z-index: 1;
    color: white;
    text-align: center;
    padding-top: 20vh;
  }
</style>