---
import Title from "@atoms/Title/Title";
import { userData } from "@data/userData";
export const prerender = true;
const { data } = Astro.props;
import AboutData from "@data/about.mdx";
---

<section class="about" id="about">
  <article class="about__container">
    <div class="about__profile">
      <div class="image-side">
        <img
          src="/img/entrenado.jpg"
          class="image__entrenamiento"
          alt="Entrenamiento"
        />
        </div>
        <div class="descripcion__image">
          <h3>"No importa cuán difícil sea, siempre hay que seguir adelante."</h3>
        </div>
      
    </div>
    <div class="about__content">
      <Title titleDesc="Nosotros" clase="title-dark" />
      <AboutData />
    </div>
  </article>
</section>
